<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFramework>netstandard1.0</TargetFramework>
      <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <Title>InvertedTomato.Crc</Title>
      <Authors>InvertedTomato</Authors>
      <Description>A flexible CRC implementation supporting all major algorithms. Also includes ability to support custom implementations.</Description>
      <PackageProjectUrl>https://github.com/invertedtomato/crc</PackageProjectUrl>
      <PackageLicenseUrl>https://github.com/invertedtomato/crc/blob/master/LICENSE</PackageLicenseUrl>
      <RepositoryUrl>https://github.com/invertedtomato/crc</RepositoryUrl>
      <RepositoryType>git</RepositoryType>
      <PackageTags>crc,crc8,crc16,crc32,crc64,hash</PackageTags>
      <PackageVersion>1.0.2</PackageVersion>
      <AssemblyName>InvertedTomato.Crc</AssemblyName>
      <RootNamespace>InvertedTomato.Checksum</RootNamespace>
      <PackageId>InvertedTomato.Crc</PackageId>
  </PropertyGroup>

</Project>
